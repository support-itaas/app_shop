<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="alert_confirm">
    </t>

    <t t-name="alert_input">
        <div class="swal2-container swal2-fade swal2-in" style="overflow-y: auto;">
            <div class="swal2-modal swal2-show"
                 style="display: block; width: 500px; padding: 20px; background: rgb(255, 255, 255); min-height: 340px;"
                 tabindex="-1">
                <h2><t t-esc=" widget.options.title || 'Confirm ?' " /></h2>
                <div class="swal2-content" style="display: block;"><t t-esc="  widget.options.body || '' "/>
                </div>
                <div class="row" style="padding-bottom: 40px; padding-top: 40px">
                    <div class="form-group label-floating is-empty">
                        <input type="text" class="input_form" style="border:1px #c57272 !important; background: #1d70ab; color: white"/>
                    </div>
                </div>
                <div class="footer">
                    <span type="button" class="swal2-confirm btn btn-success button confirm">Yes</span>
                    <span type="button" class="swal2-cancel btn btn-danger button cancel">Close</span>
                </div>
            </div>
        </div>
    </t>


    <t t-name="alert_result">
    </t>

</templates>
