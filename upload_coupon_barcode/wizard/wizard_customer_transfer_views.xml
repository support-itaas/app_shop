<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wizard_customer_transfer" model="ir.ui.view">
        <field name="name">wizard.customer.transfer.form</field>
        <field name="model">wizard.customer.transfer</field>
        <field name="arch" type="xml">
            <form string="Transfer">
                <group>
                    <group>
                        <field name="partner_id"/>
                        <field name="note"/>
                    </group>
                </group>
                <footer>
                    <button name="transfer_customer_button" string="Transfer" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
