<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_general_form_gbprime" model="ir.ui.view">
        <field name="name">res.config.settings.general.form.gbprime</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='emails']" position="after">
                <div id="installment_details">
                    <h2>Installment Details</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div style="font-weight:bold;">
                                Configure Minimum Amount
                            </div>
                            <div class="o_setting_right_pane">

                                <span/>

                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="min_amount_install"
                                               class="col-xs-3 col-md-3 o_light_label"/>
                                        <field name="min_amount_install" class="oe_inline"/>
                                    </div>
                                </div>
                            </div>
                            <br/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>