<odoo>

    <record model="ir.ui.view" id="product_form_view_gift_voucher">
        <field name="name">product.coupon.inherit.form.gift.voucher</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='type']" position="after">
                <field name="gift_voucher_amount"/>
            </xpath>


        </field>
    </record>


</odoo>