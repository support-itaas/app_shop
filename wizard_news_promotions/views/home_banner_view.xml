<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    tree view for Home Banner-->
    <record id="view_home_banner_tree" model="ir.ui.view">
        <field name="name">home.banner.tree</field>
        <field name="model">home.banner</field>
        <field name="arch" type="xml">
            <tree string="Home Banner" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="name" string="Name"/>
            </tree>
        </field>
    </record>
    <!--form view for Home Banner-->
    <record id="view_home_banner_form" model="ir.ui.view">
        <field name="name">home.banner.form</field>
        <field name="model">home.banner</field>
        <field name="arch" type="xml">
            <form string="Home Banner Form">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                        <br/>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Name"/>
                        <h1>
                            <field name="name" placeholder="Banner Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="news_promo_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--    search view for Home Banner-->
    <record id="view_home_banner_filter" model="ir.ui.view">
        <field name="name">home.banner.list.select</field>
        <field name="model">home.banner</field>
        <field name="arch" type="xml">
            <search string="Search Sequences">
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <field name="name"/>
                <field name="sequence"/>
            </search>
        </field>
    </record>
    <!--action view for Home Banner-->
    <record id="home_banner_action" model="ir.actions.act_window">
        <field name="name">Home Banner</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">home.banner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to Create Home Banner.
            </p>
        </field>
    </record>

    <menuitem id="home_banner_menu"
              name="Home Banner"
              parent="wizard_project.car_care_configuration_menu"
              action="home_banner_action"
              sequence="13"/>

</odoo>