<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_hr_payroll_sso_rate" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.hr.payroll.sso.rate</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr_payroll']" position="inside">
                <h2>SSO Rate</h2>
                <div class="row mt16 o_settings_container" id="sso_rate">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="default_sso_rate"/>
                            <div class="text-muted">
                                Set the default SSO rate
                            </div>
                            <div class="mt16">
                                <field name="default_sso_rate" class="o_light_label"/>
                            </div>

                            <label for="default_maximum_sso"/>
                            <div class="text-muted">
                                Set the default maximum
                            </div>
                            <div class="mt16">
                                <field name="default_maximum_sso" class="o_light_label"/>
                            </div>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>

</odoo>
