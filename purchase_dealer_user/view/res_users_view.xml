<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_purchase_order_type" model="ir.ui.view">
        <field name="name">res.users.purchase.order.type.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']/group[1]" position="after">
                <group string="Default Purchase Type">
                    <field name="purchase_type"/>
                    <field name="order_type" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
