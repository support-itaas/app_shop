<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_users_view_form_inherit_smsmkt" model="ir.ui.view">
        <field name="name">res.users.view.form.inherit.smsmkt</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
        <field name="arch" type="xml">
            <xpath expr="//footer" position="before">
                <group string="SMSMKT Credentials">
                    <group>
                        <field name="smsmkt_username"/>
                        <field name="smsmkt_password"/>
                        <field name="smsmkt_sender"/>
                    </group>
                </group>
            </xpath>

        </field>
    </record>
</odoo>