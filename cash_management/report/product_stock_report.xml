                                                <td style="text-align:right"><span t-esc="'{0:,.2f}'.format(float(before['value']/before['qty']))"/></td>
                                                <td style="text-align:right"><span t-esc="'{0:,.2f}'.format(float(before['value']))"/></td>
                                                <td style="text-align:center"><span/></td>
                                            </tr>
                                        </t>
